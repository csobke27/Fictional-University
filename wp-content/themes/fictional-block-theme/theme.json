{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "styles": {
        "blocks": {
            "core/button": {
                "color": {
                    "text": "#FFFFFF",
                    "background": "var(--wp--preset--color--primary)"
                }
            }
        }
    },
    "settings": {
        "blocks": {
            "core/button": {
                "border": {
                    "color": false,
                    "radius": false
                }
            }
        },
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#0d3b66",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#ee964b",
                    "name": "Secondary"
                },
                {
                    "slug": "background",
                    "color": "#FFFFFF",
                    "name": "Background"
                },
                {
                    "slug": "foreground",
                    "color": "#333333",
                    "name": "Foreground"
                }
            ]
        },
        "layout": {
            "contentSize": "840px",
            "wideSize": "1200px"
        }
    }
}